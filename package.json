{
  "version": "0.3.0",
  "name": "route.flow",
  "description": "Library for type safe routing",
  "keywords": [
    "route",
    "routing",
    "url",
    "parser",
    "formatter",
    "parse",
    "format",
    "typed",
    "flow"
  ],
  "main": "lib/Route",
  "module": "src/Route",
  "author": "Irakli Gozalishvili <rfobic@gmail.com> (http://jeditoolkit.com)",
  "repository": "https://github.com/Gozala/route.flow",
  "license": "MIT",
  "devDependencies": {
    "alias-quokka-plugin": "^0.1.0",
    "babel-cli": "^6.26.0",
    "babel-preset-flow-node": "^2.0.1",
    "babel-preset-flow-syntax": "1.0.1",
    "babel-register": "^6.26.0",
    "blue-tape": "^1.0.0",
    "documentation": "^6.3.2",
    "flow-bin": "^0.71.0",
    "flow-copy-source": "^1.3.0",
    "husky": "^0.14.0",
    "lint-staged": "^7.0.5",
    "prettier": "^1.12.1"
  },
  "scripts": {
    "test": "npm run build:node && npm run test:flow && npm run test:tape",
    "test:tape":
      "blue-tape -r babel-register -r source-map-support/register 'test/**/*.js'",
    "test:flow": "flow check",
    "build:clear": "rm -rf lib",
    "build:types": "flow-copy-source --verbose src lib",
    "build:node": "babel --out-dir lib src",
    "build:api": "documentation readme --section=API src/Route.js",
    "build:docs":
      "documentation build --document-exported src/** -f html --o docs",
    "build": "npm run build:node && npm run build:types",
    "prepublish": "npm run build && npm test",
    "precommit": "lint-staged",
    "start":
      "flow-copy-source --watch --verbose src lib & babel --watch --out-dir lib src"
  },
  "lint-staged": {
    "*.js": ["prettier --parser flow --no-semi --write", "git add"]
  },
  "quokka": {
    "alias": {
      "route.flow": "src/Route"
    },
    "pro": true,
    "babel": {
      "env": "development"
    },
    "plugins": ["alias-quokka-plugin"]
  },
  "dependencies": {
    "float.flow": "^0.1.2",
    "integer.flow": "^0.1.1"
  }
}
